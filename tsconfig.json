{
	"extends": "astro/tsconfigs/strict",
	"exclude": ["node_modules"],
	"include": ["src/**/*.ts", "src/**/*.svelte", "src/**/*.astro"],
	"compilerOptions": {
		"baseUrl": ".",
		"paths": {
			"@components/*": ["src/components/*"],
			"@lib/*": ["src/lib/*"],
			"@layouts/*": ["src/layouts/*"],
		}
	}
}
